<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".employee.navigationfragments.Employee_Attendance"

 >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/real_toolbarcolor"
                android:paddingStart="15dp"
                android:paddingEnd="0dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:src="@drawable/back_icon"
                app:tint="@color/white"

                />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/emp_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/real_toolbarcolor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:title="Request Attendance"
                app:titleTextColor="@color/white" >

            </androidx.appcompat.widget.Toolbar>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:background="@color/white"
            >
            <EditText
                android:id="@+id/emp_attendance_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:ems="10"
                android:padding="12dp"
                android:background="@drawable/text_veiw_border"
                android:hint="Employee Name"
                android:inputType="textPersonName"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/emp_select_current_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:ems="10"
                android:padding="12dp"
                android:background="@drawable/text_veiw_border"
                android:hint="Select Date"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="date"
                android:minHeight="48dp" />
            <Button
                android:id="@+id/emp_attendance_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="0dp"
                android:backgroundTint="@color/colorforbutton"
                android:padding="12dp"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:cornerRadius="10dp"
                android:text="Request Attendance" />
        </LinearLayout>
    </LinearLayout>


</FrameLayout>