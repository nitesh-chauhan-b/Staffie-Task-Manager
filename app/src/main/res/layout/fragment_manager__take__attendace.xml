<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".manager.navigationfragments.Manager_Take_Attendance">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/real_toolbarcolor"
                android:paddingStart="15dp"
                android:paddingEnd="0dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:src="@drawable/back_icon"
                app:tint="@color/white"

                />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/mng_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/real_toolbarcolor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:title="Take Attendance"
                app:titleTextColor="@color/white" >

                <Button
                    android:id="@+id/submit_attendance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Done"
                    android:layout_gravity="end"
                    android:textAllCaps="false"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#24559A"
                    android:textColor="@color/white"
                    app:elevation="2dp"

                    />
            </androidx.appcompat.widget.Toolbar>


        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mng_attendance_taking_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>



    </LinearLayout>

</FrameLayout>